generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String            @id @default(uuid())
  username String             @unique
  email     String            @unique
  password String
  genders   Gender[]       @relation("UserFavoriteGenders") 
  movies   Movie[]         @relation("UserFavoriteMovies") 
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@map("users")
}


model Gender {
  id        String        @id @default(uuid())
  name String             @unique
  users     User[]        @relation("UserFavoriteGenders") 
  movies  Movie[]         @relation("MovieGenders") 
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("Genders")

}





model Movie{
  id        String            @id @default(uuid())
  title  String
  description String
  release_year DateTime
  gender  Gender[]         @relation("MovieGenders") 
  users     User[]        @relation("UserFavoriteMovies") 
  like_count Int @default(0)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
   @@map("Movies")

}




    

